page{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	line-height: 1;
	background: #fbf1e7;
}
.page{
	width: 100%;
	height: 100%;
}
.flex{
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.active{
	height: 70rpx;
	width: 150rpx;
	text-align: center;
	transition:height 2s;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	background: red;
}
.tap{
	/*width: 20%;*/
	height: 40rpx;
	display: flex;
	padding: 20rpx 0;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	background: #926025;
	position: relative;
	border:2rpx solid #ccc;
}
.tap view{
	width: 100%;
	text-align: center;
	/*margin-right: 50rpx;*/
}
.tap:before{
	content: '|||';
	position: absolute;
	right: 0;
	top: 50%;
	color: #000;
	/*top: 0;*/
	/*transform: translate(-50%,25%) rotate(90deg);*/
	transform: translate(-50%,-50%) rotate(90deg);
	/*z-index: -1;*/
}

.tap_li{
	width: 0;
	height: 0;
	transition:height 2s;
	/*padding: 10rpx 20rpx;*/
	background: #c6c6c6;
	margin-left: 20rpx;
	overflow: hidden;
}


.cartoonList{
	width: 100%;
	display: flex;
	flex-direction: column;

}
.coot{
	padding: 20rpx 0;
	padding-left: 40rpx;
	/*background: */
	border-bottom:2rpx solid #c6c6c6;
	position: relative;
}
.coot:before{
	content: '|||';
	position: absolute;
	right: 0;
	top: 50%;
	transform: translate(-50%,-50%) rotate(90deg);
}

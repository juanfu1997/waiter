	height: 100%;
}
.busDetail{
	width: 100%;
	display: flex;
	align-items: center;
	padding:40rpx 0;
	border-bottom: 2rpx solid #e4d8be;
}
.location{
	width: 40rpx;
	padding: 0 20rpx;
}
.busInfo{
	width: 50%;
	flex-grow: 1;
}
.busInfo .name{}

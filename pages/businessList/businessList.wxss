@import "/dist/tabbar/index.wxss";
page{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	line-height: 1;
	background-color: #fbf1e7;
}
.page{
	width: 100%;
	height: 100%;
}
.header{
	width: 100%;
	text-align: center;
	font-size: 28rpx;
	line-height: 1;
	color: #b2b1af;
	padding: 20rpx 0;
}
.busList{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.li{
	width: 100%;
	/*margin-top: 10rpx;*/
	padding: 40rpx 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-start;
	border-top:2rpx solid #e4d8be;
}
.li:nth-last-child(1){
	/*margin-bottom: 10rpx;*/
	border-bottom: 2rpx solid #e4d8be;
	
}

.busName{
	flex-grow: 1;
	position: relative;
	margin-left: 80rpx;
	padding: 10rpx 0;
}
.busName:before{
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	transform: translate(-150%,-50%);
	width: 15rpx;
	height: 15rpx;
	border-radius: 50%;
	background-color: red;

}
.li-bottom{
	width: 100%;
	padding: 10rpx 0;
	padding-left: 80rpx;
	font-size: 24rpx;
	color: #b2b1af;
}
@import "/dist/tabbar/index.wxss";
.tabbar .tab5{
	flex-direction: column;
}
.tabbar .tab5 image {
	margin-top:4rpx;
    width: 26rpx;
    order: 2;
    /*height: 40rpx;*/
}

.tabbar .tab5. text {
    color: #000;
    /*height: 40rpx;*/
}
.tabbar .tab5.active text {
    color: #000;
    position: relative;
    /*height: 40rpx;*/
}
.tabbar .tab5.active text:after{
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate( -50%,-0% );
    border-top: 16rpx solid transparent;
    border-left: 16rpx solid transparent;
    border-right: 16rpx solid transparent;
    border-bottom: 16rpx solid #a0a0a0;
}
page{
	width: 100%;
	height: 100%;
	background-color: #fbf1e7;
}
.page{
	width: 100%;
	height: 100%;
}
.tap,.content{
	width: 100%;
	display: flex;
	align-items: center;
}
.tap{
	background-color: #e8be8e;
	color:#fff;
}
.label{
	font-size: 28rpx;
	line-height: 1;
	padding: 20rpx 0;
	display: flex;
	align-items: center;
	justify-content: center;
}
.label:nth-child(1){
	flex:2;
}
.label:nth-child(2){
	flex:2;
}
.label:nth-child(3){
	flex:3;
}
.content{
	border-bottom:2rpx solid #e4d8be;
	color:#000;
}
.label .li{
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 10rpx 20rpx;
	border:2rpx solid #e8be8e;
	font-size: 24rpx;
	line-height: 1;
}
.label .li:nth-child(1){
	margin-right: 20rpx;
}

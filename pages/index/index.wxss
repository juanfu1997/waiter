page{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	line-height: 1;
	background-color: #fbf1e7;
	color: #8f5107
}
.page{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	overflow: hidden;
}
.bg{
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: -1;
}
.logo{
	width: 55%;
	margin: 10% 0;
}
.btn_button{
	width: 100%;
	height: 36%;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.classify{
	/*width: 300rpx;*/
	width: 60%;
	margin-bottom: 20rpx;
	background: #ccc;
	text-align: center;
	padding: 30rpx 100rpx; 
	border-radius: 20rpx;
	box-shadow: 0rpx 4rpx 0rpx #e8be8e;
	background-color: #fff;
}
.classify:nth-last-child(1){
	margin-bottom: 0rpx;
}
.classifyImg{
	width: 60%;
	/*margin-top: 5%;*/
}
/*.classifyImg:nth-child(1){
	margin-top: 0;
}*/
.footer{
		position: absolute;
		bottom:3%;
		left: 50%;
		transform: translateX(-50%);
	width: 80%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	font-size: 28rpx;
	text-decoration: underline;
}
.demo{
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	/*background-color: #000;
	opacity: 0.3;*/
	background-color: rgba(0,0,0,0.3);
}
.login{
	width: 100%;
	height: 100%;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
	background-color: rgba(0,0,0,0.3);
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.frame{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #fff;
	padding: 40rpx 40rpx;
}
.frame image{
	width: 140rpx;
	margin: 20rpx 0;
}
.frame input{
	width: 420rpx;
	margin-top: 40rpx;
	border-bottom: 2rpx solid #aaaaaa;
}
.frame .send{
	margin: 40rpx 0; 
	padding: 20rpx 100rpx; 
	border:2rpx solid #aaaaaa;
}

@import "/dist/tabbar/index.wxss";
.tabbar .tab2{
	justify-content: center;
	background-color: #e8be8e;
	border-radius: 20rpx;
	color: #855211;
}
.tabbar .tab2.active{
	background-color: #926025;
}
.tabbar .tab2.active text {
	color: #fff;
}
.tabbar .tab2:nth-child(1){
	flex:0 0 10%;
}
.tabbar .tab2:nth-child(2){
	flex:0 0 40%;
}
.tabbar .tab2:nth-child(3){
	flex:0 0 40%;
}

page{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	line-height: 1;
	background-color: #fbf1e7;
}
.page{
	width: 100%;
	height: 100%;
}
.slider{
	width: 100%;
}
.slider image{
	width: 100%;
}
.storeInfo{
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.info{
	display: flex;
	justify-content: flex-start;
	align-items: center;
	width: 100%;
	margin-top: 20rpx;
}
.info:nth-child(2){
	margin-bottom: 20rpx;
}
.info .info_img{
	width: 24rpx;
	height: 24rpx;
	margin: 0 20rpx;
}
.info .info_txt{
	font-size: 24rpx;
	line-height: 1;
}
.Tabbar{
	width: 90%;
	margin: 0 auto;
  	display: flex;
  	border-bottom:2rpx solid #e4d8be;
  	font-size: 24rpx;
  	line-height: 1;
}
.Tabbar .tab{
  	flex:1;
	text-align: center;
	margin: 20rpx 0;
	margin-bottom: 30rpx;
	/*font-size: 28rpx;
	line-height: 1;*/
}
.Tabbar .tab-actived{
	flex:1;
	text-align: center;
	margin: 20rpx 0;
	margin-bottom: 30rpx;
	/*font-size: 28rpx;
	line-height: 1;*/
	color: #626262;
	position: relative;
}
.Tabbar .tab-actived:after{
	content: '';
	position: absolute;
	left: 50%;
	border-bottom: 0%;
	transform: translate(-50%,20rpx);
	/*width: 10rpx;*/
	/*height: 20rpx;*/
	border-top:18rpx solid transparent;
	border-left:10rpx solid transparent;
	border-right:10rpx solid transparent;
	border-bottom: 18rpx solid red;
}
.Tabbar_event{
	width: 90%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.Tabbar_event .aboutBus{}
.Tabbar_event .busDetails{
	width: 80%;
}

.header{
	width: 100%;
	text-align: center;
	font-size: 28rpx;
	line-height: 1;
	color: #b2b1af;
	padding: 20rpx 0;
}
.busList{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.li{
	width: 100%;
	margin-top: 10rpx;
	padding: 40rpx 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-start;
	border:2rpx solid #e4d8be;
}
.li:nth-last-child(1){
	margin-bottom: 10rpx;
	
}

.busName{
	flex-grow: 1;
	position: relative;
	margin-left: 80rpx;
	padding: 10rpx 0;
}
.busName:before{
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	transform: translate(-150%,-50%);
	width: 15rpx;
	height: 15rpx;
	border-radius: 50%;
	background-color: red;

}
.li-bottom{
	width: 100%;
	padding: 10rpx 0;
	padding-left: 80rpx;
	font-size: 24rpx;
	color: #b2b1af;
}
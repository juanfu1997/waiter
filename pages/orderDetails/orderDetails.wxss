@import "/dist/tabbar/index.wxss";
.tabbar .tab4 {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
    color: #fff;
    line-height: 1;
    border-radius: 20rpx;
}
.tabbar .tab4:nth-child(1){
	flex:0 0 10%;
	background-color: #e8be8e;
}
.tabbar .tab4:nth-child(2){
	flex:0 0 40%;
	background-color: #e8be8e;
}
.tabbar .tab4:nth-child(3){
	flex:0 0 40%;
	background-color: #926025;
}
.tabbar .tab4 image {
    width: 40rpx;
    /*height: auto;*/
}

.tabbar .tab4 text {
    margin-top:0rpx;
    font-size: 28rpx;
    line-height: 1;
}

.tabbar .tab4.active text {
    color: #c90265;
}


page{
	width: 100%;
	height: 100%;
	background-color: #fbf1e7;
	font-size: 28rpx; 
	line-height: 1;
	color:#8f5f1d;
}
.page{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.bill_frame{
	width: 90%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
	/*margin-top: 200rpx;*/
}
.bill{
	width: 100%;
}
.bill_main{
	width: 100%;
	height: 80%;
	padding-top: 20rpx;
	position: absolute;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
}
.bill_header{
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	color: #8f5f1d;
	font-size: 26rpx;
	line-height: 1;
}
.bill_content{
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	flex-grow: 1;
	margin: 80rpx 0;
}
.bill_content .bill_type{
	font-size: 46rpx;
	line-height: 1;
	color: #f66341;
}
.bill_content .bill_number{
	width: 400rpx;
	word-wrap: break-word;
	text-align: center;
	line-height: 1;
	color: #000;
}
.fontSize1{
	font-size: 40rpx;
}
.fontSize2{
	font-size: 100rpx;
}
.bill_content .bill_state{
	display: flex;
	justify-content: center;
	align-items: center;
}
.bill_footer{
	width: 80%;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.ranks_tips{
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap:wrap;
}
.ranks_tips view{
	background-color: red;
}
.appointment_tips{
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	font-size: 24rpx;
	line-height: 1;
	color: #626262;
}
.remarks{
	position: absolute;
	bottom: -20rpx;
	left: 50%;
	width: 90%;
	transform: translate(-50%,100%);
	font-size: 24rpx;
	text-align: center;
	color: #626262;
}